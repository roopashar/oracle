{
  "_comment": "Sample configuration file for Oracle Test Library CLI",
  
  "connection": {
    "host": "localhost",
    "port": 1521,
    "user": "testuser",
    "password": "testpass",
    "service_name": "ORCLPDB1"
  },
  
  "tls": {
    "enabled": true,
    "wallet_location": "/opt/oracle/wallet",
    "wallet_password": "WalletPassword123"
  },
  
  "test_profiles": {
    "low_load": {
      "concurrent_connections": 2,
      "operations_per_second": 10,
      "data_size_kb": 10,
      "think_time_ms": 100,
      "duration_seconds": 60
    },
    
    "medium_load": {
      "concurrent_connections": 10,
      "operations_per_second": 100,
      "data_size_kb": 500,
      "think_time_ms": 25,
      "duration_seconds": 180
    },
    
    "high_load": {
      "concurrent_connections": 50,
      "operations_per_second": 500,
      "data_size_kb": 1024,
      "think_time_ms": 0,
      "duration_seconds": 300
    },
    
    "stress_test": {
      "concurrent_connections": 100,
      "operations_per_second": 1000,
      "data_size_kb": 2048,
      "think_time_ms": 0,
      "duration_seconds": 600
    }
  },
  
  "test_scenarios": {
    "write_heavy": {
      "test_type": "mixed",
      "read_ratio": 0.2,
      "profile": "medium_load"
    },
    
    "read_heavy": {
      "test_type": "mixed",
      "read_ratio": 0.8,
      "profile": "medium_load"
    },
    
    "balanced": {
      "test_type": "mixed",
      "read_ratio": 0.5,
      "profile": "medium_load"
    }
  },
  
  "output": {
    "directory": "./test_results",
    "format": "json",
    "include_detailed_metrics": true,
    "min_success_rate": 95.0
  },
  
  "monitoring": {
    "enable_progress_updates": true,
    "update_interval_seconds": 5,
    "collect_system_metrics": false
  }
}
